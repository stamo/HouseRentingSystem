@model IEnumerable<UserServiceModel>

@{
    ViewBag.Title = "All Users";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th><label>Email</label></th>
            <th><label>Full Name</label></th>
            <th><label>Phone Number</label></th>
            <th><label>User Is Agent</label></th>
            <th><label>Actions</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><label>@user.Email</label></td>
                <td><label>@user.FullName</label></td>
                <td><label>@user.PhoneNumber</label></td>
                <td>
                    @if (string.IsNullOrEmpty(user.PhoneNumber) == false)
                    {
                        <label>✔</label>
                    }
                    else
                    {
                        <label class="text-center">❌</label>
                    }
                </td>
                <td>
                    <form asp-area="Admin" asp-controller="User" asp-action="Forget" method="post">
                        <input type="hidden" value="@user.UserId">
                        <button type="submit" class="btn btn-danger">Forget</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
